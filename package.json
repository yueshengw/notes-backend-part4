        "test": "NODE_ENV=test jest --verbose --runInBand --forceExit"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.1",
        "eslint": "^8.22.0",
        "express": "^4.18.1",
        "express-async-errors": "^3.1.1",
        "mongoose": "^6.5.1"
    },
    "devDependencies": {
        "jest": "^28.1.3",
        "nodemon": "^2.0.19",
        "supertest": "^6.2.4"
    },
    "jest": {
        "testEnvironment": "node"
    }
}
